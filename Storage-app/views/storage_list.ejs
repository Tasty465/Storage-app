<%- include("partials/header", { title: "Storage List" }) %>
<%- include("partials/navbar", { user: user }) %>

<div class="container container-max py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Available Storage</h3>
  </div>

  <div class="row g-4">
    <% storage.forEach(s => { %>
      <div class="col-md-4">
        <div class="card h-100 shadow-soft p-3">
          <h5 class="fw-bold"><%= s.title %></h5>
          <p class="mb-1 small-muted"><strong>Size:</strong> <%= s.size %></p>
          <p class="mb-1 small-muted"><strong>Location:</strong> <%= s.location || 'N/A' %></p>
          <p class="fw-bold text-success">$<%= s.price_per_day || s.price %> / day</p>

          <div class="mt-3 d-grid gap-2">
            <% if (user && user.role === 'customer') { %>
              <a href="/booking?storage_id=<%= s.storage_id %>" class="btn btn-primary">Book</a>
            <% } else if (!user) { %>
              <a href="/login" class="btn btn-outline-primary">Login to Book</a>
            <% } else { %>
              <button class="btn btn-secondary" disabled>Owner/Admin</button>
            <% } %>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include("partials/footer") %>
