<%- include("partials/header", { title: "Login" }) %>
<%- include("partials/navbar", { user: user }) %>

<div class="d-flex align-items-center justify-content-center" style="min-height:75vh;">
  <div class="card shadow-soft p-4" style="width:380px;">
    <h4 class="mb-1">Welcome back</h4>
    <p class="small-muted mb-3">Login to access your account</p>

    <form action="/login" method="POST">
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input required name="email" type="email" class="form-control" placeholder="you@example.com">
      </div>

      <div class="mb-3">
        <label class="form-label">Password</label>
        <input required name="password" type="password" class="form-control" placeholder="Enter password">
      </div>

      <button class="btn btn-primary w-100">Login</button>
    </form>

    <p class="text-center small-muted mt-3">Donâ€™t have an account? <a href="/register">Register</a></p>
  </div>
</div>

